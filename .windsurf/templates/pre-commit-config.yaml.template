# Pre-commit configuration
#
# Notes:
# - This is a starter config. Adjust hooks to match the repo's languages and conventions.
# - In locked-down enterprise environments, you may need to mirror hook repos internally.

repos:
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.6.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-json
      - id: check-added-large-files
        args: ["--maxkb=1024"]
